{
  "name": "backend",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "major": "yarn version --major",
    "minor": "yarn version --minor",
    "patch": "yarn version --patch",
    "gen": "ts-node src/modules/graphql/schema-generator.ts",
    "prebuild": "rimraf dist/*",
    "build": "tsc",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "prewebpack": "rimraf .hot/*",
    "webpack": "webpack --config webpack.config.js",
    "start:hot": "HOT=true node .hot/server",
    "prestart:dev": "yarn generate:schema",
    "start:dev": "nodemon -q",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "yarn build",
    "start:prod": "NODE_ENV=production node -r ./tsconfig-paths-bootstrap.js dist/main.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && git add ."
    }
  },
  "dependencies": {
    "@nestjs/common": "^7.0.13",
    "@nestjs/core": "^7.0.13",
    "@nestjs/graphql": "^7.3.9",
    "@nestjs/platform-express": "^7.0.13",
    "@nestjs/serve-static": "^2.1.1",
    "@nestjs/typeorm": "^7.0.0",
    "apollo-server-express": "^2.13.1",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "child_process": "^1.0.2",
    "dotenv": "^8.2.0",
    "graphql": "^15.0.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-resolvers": "^0.4.2",
    "graphql-tools": "^5.0.0",
    "graphql-voyager": "^1.0.0-rc.29",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.25.3",
    "mongodb": "^3.5.7",
    "nest-schedule": "^0.6.4",
    "node-schedule": "^1.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.24",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.5.17",
    "@types/node": "^14.0.1",
    "@types/uuid": "^7.0.3",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "chalk": "^2.4.2",
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "npm-check-updates": "^6.0.1",
    "prettier": "^2.0.5",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.9.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2",
    "yarn": "^1.22.4"
  }
}
